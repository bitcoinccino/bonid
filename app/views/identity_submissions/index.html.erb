  transform: scale(1.06);
  box-shadow: 0 8px 18px var(--glow-blue), 0 8px 14px var(--glow-red);
}

.qr-code-container:focus {
  outline: 2px solid var(--blue);
  outline-offset: 3px;
}

.qr-code-container:active::before {
  content: '';
