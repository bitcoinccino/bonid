                                      data: {
                                        action: "change->address#loadCommunalSections",
                                        address_target: "commune"
                                      }
                                    },
                                    label_html: { class: "form-label fw-bold" },
                                    wrapper_html: { class: "mb-3" } %>
                      </div>
                      <div class="col-md-6">
                        <%= a.input :communal_section_id,
                                    collection: [],
                                    prompt: "Select Section Communale",
                                    input_html: {
