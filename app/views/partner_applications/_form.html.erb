                                    wrapper_html: { class: "mb-3" } %>
                      </div>
                      <div class="col-md-6">
                        <%= a.input :locality,
                                    input_html: {
                                      class: "form-control rounded-3",
                                      placeholder: "e.g., Quartier Morin"
                                    },
                                    label_html: { class: "form-label fw-bold" },
                                    wrapper_html: { class: "mb-3" } %>
                      </div>
