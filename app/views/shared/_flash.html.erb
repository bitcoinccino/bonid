<div class="flash-container position-fixed start-50 translate-middle-x px-3" style="top: 80px; z-index: 1050; max-width: 540px; width: 100%;">
  <% flash.each do |type, message| %>
    <% bootstrap_class, icon = case type.to_sym
       when :notice then ["alert-success", "ri-check-line"]
       when :alert  then ["alert-danger", "ri-error-warning-line"]
       when :warning then ["alert-warning", "ri-alert-line"]
       else ["alert-info", "ri-information-line"]
       end %>
    <div class="alert <%= bootstrap_class %> alert-dismissible fade show d-flex align-items-center gap-2 rounded-3 shadow-sm mb-3" role="alert">
      <i class="<%= icon %> fs-5"></i>
      <div class="flex-grow-1"><%= message %></div>
      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
  <% end %>
</div>












