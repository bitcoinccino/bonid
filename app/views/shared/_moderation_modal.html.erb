<div class="modal fade" id="moderationModal" tabindex="-1" aria-labelledby="moderationModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header bg-danger text-white">
        <h5 class="modal-title" id="moderationModalLabel">Reject Submission</h5>
        <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <form id="moderationModalForm" data-controller="moderation">
          <div class="mb-3">
            <label for="rejection-reason" class="form-label fw-bold">Reason for rejection:</label>
            <select id="rejection-reason" class="form-select" data-moderation-target="select">
              <option value="">-- Select a reason --</option>
              <option value="incomplete">Incomplete documents</option>
              <option value="fraud">Suspected fraud</option>
              <option value="invalid_id">Invalid ID type</option>
              <option value="mismatch">Information mismatch</option>
              <option value="other">Other</option>
            </select>
          </div>
          <div class="mb-3">
            <label for="rejection-notes" class="form-label fw-bold">Additional notes (optional):</label>
            <textarea id="rejection-notes" class="form-control" data-moderation-target="notes" rows="3"></textarea>
          </div>
          <input type="hidden" data-moderation-target="cardId">
        </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
        <button type="button" class="btn btn-danger" data-action="click->moderation#confirmBadBin">Confirm Rejection</button>
      </div>
    </div>
  </div>
</div>
