<% status_info = submission_status_info(submission) %>
<% type_label, type_class, type_description = submission_type_badge(submission) %>

<div class="mb-4">
  <div class="d-flex align-items-center gap-3 flex-wrap">
    <span class="badge <%= status_info[:badge_class] %> rounded-pill px-3 py-2">
      <%= status_info[:text] %>
    </span>

    <span class="badge <%= type_class %> rounded-pill px-3 py-2">
      <%= type_label %>
    </span>
  </div>

  <p class="text-muted mt-2 mb-0">
    <%= submission_type_description(submission) %>
  </p>
</div>

