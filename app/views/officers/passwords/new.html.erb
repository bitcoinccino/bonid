<%= render "shared/navbar" %>

<div class="container d-flex justify-content-center align-items-center min-vh-100">
  <div class="col-md-6 col-lg-5 bg-white p-5 rounded-4 shadow-sm">
    <h2 class="fw-bold text-center mb-4">Forgot Your Password?</h2>
    <p class="text-muted text-center mb-4">
      Enter your email address and weâ€™ll send you a link to reset your password.
    </p>

    <%= simple_form_for(resource, as: :officer, url: officer_password_path, html: { method: :post }) do |f| %>
      <%= f.error_notification %>

      <div class="mb-3">
        <%= f.input :email, required: true, label: "Email Address", input_html: { class: "form-control rounded-3", autofocus: true, autocomplete: "email" } %>
      </div>

      <%= f.button :submit, "Send Reset Instructions", class: "btn btn-primary w-100 rounded-pill fw-semibold" %>
    <% end %>

    <div class="text-center mt-3">
      <%= link_to "Back to login", new_officer_session_path, class: "text-muted small" %>
    </div>
  </div>
</div>
