<!-- app/views/officers/sessions/new.html.erb -->
<div class="container py-5" style="max-width: 480px">
  <div class="bg-white p-4 shadow rounded-3">
    <h4 class="fw-bold text-center mb-4 text-primary">PNH Officer Login</h4>

    <%= form_for(resource, as: resource_name, url: officer_session_path, html: { class: "needs-validation", novalidate: true }) do |f| %>
      <!-- Email -->
      <div class="mb-3">
        <%= f.label :email, class: "form-label fw-semibold" %>
        <%= f.email_field :email, autofocus: true, class: "form-control rounded-3", placeholder: "officer@police.ht" %>
      </div>

      <!-- Password -->
      <div class="mb-3">
        <%= f.label :password, class: "form-label fw-semibold" %>
        <%= f.password_field :password, autocomplete: "off", class: "form-control rounded-3", placeholder: "••••••••" %>
      </div>

      <!-- Remember Me -->
      <div class="form-check mb-3">
        <%= f.check_box :remember_me, class: "form-check-input" %>
        <%= f.label :remember_me, class: "form-check-label" %>
      </div>

      <!-- Submit -->
      <div class="d-grid mb-3">
        <%= f.submit "Log In", class: "btn btn-primary fw-semibold rounded-pill py-2" %>
      </div>
    <% end %>

    <div class="text-center small">
      <%= link_to "Forgot password?", new_officer_password_path, class: "text-decoration-none text-muted" %>
    </div>
  </div>
</div>




